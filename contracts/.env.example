# ========== deployCharger.ts ==========
# 部署 Charger 到 Base 主网（--network base）
DEPLOYER_PRIVATE_KEY=     # 0x... 部署者私钥
USDT_ADDRESS=             # Base 主网 USDT 合约地址
TREASURY_ADDRESS=         # 收款地址（treasury）
OWNER_ADDRESS=            # Charger 的 owner（治理权限）
MAX_SINGLE_CHARGE=        # 单笔最大扣费额度（最小单位，字符串，如 "1000000000"）
# 可选
BASE_RPC_URL=             # 默认 https://mainnet.base.org

# ========== setOperator.ts ==========
# 给 operator 授权（调用 setOperator(operator, true)）
CHARGER_CONTRACT_ADDRESS= # 已部署的 Charger 地址
OPERATOR_ADDRESS=         # 要授权的 operator 地址
# 使用 DEPLOYER_PRIVATE_KEY 的账户须为 Charger 的 owner
